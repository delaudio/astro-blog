---
import PrismicText from "@components/PrismicText.astro";
import Layout from "../layouts/Layout.astro";
import { getHomePage } from "../prismic.ts";
import Container from "@components/Container.astro";
import PrismicRichText from "@components/PrismicRichText.astro";

const homepage = await getHomePage();
---

<Layout title="Homepage">
  <Container>
    <PrismicText content={homepage.data.title} />
    <PrismicRichText content={homepage.data.subtitle} />
  </Container>
</Layout>

<style>
  main {
    margin: auto;
    font-size: 20px;
    line-height: 1.6;
    color: white;
  }
</style>
